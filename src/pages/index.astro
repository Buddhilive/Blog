---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 5);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Buddhi Kavindra</div>
    <div class="text-3xl py-3 font-bold">A Web Artisan, Tech Blogger and a Researcher.</div>
    <div class="py-2">
      <text class="text-lg">
        Iâ€™m a A Web Artisan, Tech Blogger and a Researcher. 
        I started <strong>Buddhilive.com</strong> on 2nd of July 2015 to share news about latest product and 
        platform innovations at Google. I have also share some useful open source projects that I have contributed
        through this blog!
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="/blog"> Read Blog</a>
      <a href="https://github.com/Buddhilive?tab=repositories" target="_blank" class="btn btn-outline ml-5">
        View Projects
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
  </div>

  <HorizontalCard
    title="Berkelium NLP"
    img="/assets/berkelium_nlp.png"
    desc="Berkelium is an open-source natural language processing JavaScript library for intent classification and response retrieval for building chatbots."
    url="https://github.com/BerkeliumLabs/berkelium-dev-kit"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="BL Studio"
    img="/images/bl-studio-logo-cover.png"
    desc="BL Studio is an open-source collection of tools for generating music using Artificial Intelligence."
    url="https://github.com/Buddhilive/bl-studio"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Solias"
    img="/assets/solias.png"
    desc="Web Component Library made using Angular Elements."
    url="https://github.com/Buddhilive/solias"
    badge="NEW"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
